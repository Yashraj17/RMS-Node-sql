doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Student Result
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-warning 
            .container 
                a(href="").navbar-brand.h6 Student Management System 
        .container-fluid 
            .row 
                .col-5.mx-auto
                    .card 
                        .card-header.text-center.h3 Report Card 
                        table.table.table-striped.table-sm
                            thead
                                tr
                                    th RollNo 
                                    th= data.roll
                                tr 
                                    th Name 
                                    th= data.name
                                tr 
                                    th Contact 
                                    th= data.contact
                                tr 
                                    th Email 
                                    th= data.email 
                            tbody
                                tr 
                                    th Maths 
                                    th= data.maths
                                tr
                                    th Sience
                                    th= data.science
                                tr 
                                    th SST
                                    th= data.sst
                                tr 
                                    th English 
                                    th= data.english
                                tr 
                                    th Hindi
                                    th= data.hindi
                                tr
                                    th Total Marks 
                                    th= total = data.maths + data.science + data.sst + data.english + data.hindi
                                tr 
                                    th Result 
                                    th
                                        if total>400 && total<500
                                            p 1st Division Pass
                                        else if total>=250 && total<400
                                            p 2nd Division Pass
                                        else 
                                            p Fail 
                        a(href="/").btn.btn-warning.text-light Back 



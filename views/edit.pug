doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Edit Student Detils
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-warning 
            .container 
                a(href="").navbar-brand.h6 Edit Student
        .container-fluid 
            .row 
                .col-3.mx-auto
                    .card.mt-4.shadow 
                        .card-body 
                            form(action="", method="post")
                                mb-3 
                                label(for="") Name 
                                input(type="text", name="name" value=`${data.name}`).form-control 
                                mb-3 
                                label(for="") Contact 
                                input(type="text", name="contact" value=`${data.contact}`).form-control
                                mb-3 
                                label(for="") Email 
                                input(type="email", name="email" value=`${data.email}`).form-control
                                .row 
                                    .col
                                        mb-3 
                                        label(for="") Maths 
                                        input(type="text", name="maths" value=`${data.maths}`).form-control
                                    .col
                                        mb-3 
                                        label(for="") science 
                                        input(type="text", name="science" value=`${data.science}`).form-control
                                    .col
                                        mb-3 
                                        label(for="") sst 
                                        input(type="text", name="sst" value=`${data.sst}`).form-control
                                .row 
                                    .col
                                        mb-3 
                                        label(for="") English 
                                        input(type="text", name="english" value=`${data.english}`).form-control
                                    .col
                                        mb-3 
                                        label(for="") Hindi 
                                        input(type="text", name="hindi" value=`${data.hindi}`).form-control
                                .mb-3 
                                input(type="submit" ,value="submit").btn.btn-warning.text-light.w-100
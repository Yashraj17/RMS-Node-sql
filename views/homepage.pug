doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
        title Student Management System
    body 
        nav.navbar.navbar-expand-lg.navbar-dark.bg-warning 
            .container 
                a(href="").navbar-brand.h6 Student Management System 
                form(action="/search" method="get")
                    .input-group 
                        input(type="search",name="search").form-control
                        input(type="submit",value="search").btn.btn-dark       
        .container-fluid 
            .row 
                .col-3 
                    .card.mt-4.shadow 
                        .card-body 
                            form(action="/", method="post")
                                mb-3 
                                label(for="") Name 
                                input(type="text", name="name" placeholder="Enter name").form-control 
                                mb-3 
                                label(for="") Contact 
                                input(type="text", name="contact" placeholder="Enter contact").form-control
                                mb-3 
                                label(for="") Email 
                                input(type="email", name="email" placeholder="Enter email").form-control
                                .row 
                                    .col
                                        mb-3 
                                        label(for="") Maths 
                                        input(type="text", name="maths" placeholder="Enter name").form-control
                                    .col
                                        mb-3 
                                        label(for="") science 
                                        input(type="text", name="science" placeholder="Enter name").form-control
                                    .col
                                        mb-3 
                                        label(for="") sst 
                                        input(type="text", name="sst" placeholder="Enter name").form-control
                                .row 
                                    .col
                                        mb-3 
                                        label(for="") English 
                                        input(type="text", name="english" placeholder="Enter name").form-control
                                    .col
                                        mb-3 
                                        label(for="") Hindi 
                                        input(type="text", name="hindi" placeholder="Enter name").form-control
                                .mb-3 
                                input(type="submit" ,value="submit").btn.btn-warning.text-light.w-100
                .col-9.mx-auto  
                    table.table.table-striped
                        tr 
                            th ROll No. 
                            th Name 
                            th Contact
                            th Email 
                            th Maths 
                            th Science
                            th SST
                            th English
                            th Hindi
                            th View
                            th Action
                            each val in data
                                tr 
                                    td= val.roll
                                    td= val.name 
                                    td= val.contact 
                                    td= val.email 
                                    td= val.maths 
                                    td= val.science 
                                    td= val.sst 
                                    td= val.english 
                                    td= val.hindi 
                                    td 
                                        a(href=`/result/${val.roll}`).btn.btn-sm.btn-warning.text-light <i class="bi bi-eye-fill"></i> 
                                    td 
                                        a(href=`/delete/${val.roll}`).btn.btn-sm.btn-danger.me-2 <i class="bi bi-trash"></i> 
                                        a(href=`/edit/${val.roll}`).btn.btn-sm.btn-success <i class="bi bi-pencil-square"></i>
